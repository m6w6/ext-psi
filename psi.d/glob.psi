#include <glob.h>

function psi\glob(string $pattern, int $flags, array &$glob = NULL, callable $errfn = NULL) : int {
	let path = strval($pattern);
	let flags = intval($flags);
	let err = callback(
		epath, 
		eerrno
	) as intval($errfn(
		to_string(epath),
		to_int(eerrno)
	));
	let buf = &arrval($glob,
		intval($gl_matchc),
		intval($gl_pathc),
		intval($gl_offs),
		intval($gl_flags),
		&arrval($gl_pathv, 
			strval($gl_pathv)
		)
	);
	return glob(path, flags, err, buf) as to_int(glob);
	set $glob = to_array(*buf,
		to_int(gl_matchc),
		to_int(gl_pathc),
		to_int(gl_offs),
		to_int(gl_flags),
		to_array(*gl_pathv, gl_pathc + gl_offs, to_string(*gl_pathv))
	);
	free globfree(buf);
}
